<div id="map_map_icon_edit_popup_inner" class="popupCustom">
    <div class="form-group">
        <label for="map_map_icon_edit_popup_comment_{{id}}">{{map_icon_comment_label}}</label>
        <textarea class="form-control" cols="50" rows="5" name="map_map_icon_edit_popup_comment_{{id}}"
                  id="map_map_icon_edit_popup_comment_{{id}}"></textarea>
    </div>
    <div class="form-group">
        <label for="map_map_icon_edit_popup_map_icon_type_id_{{id}}">{{map_icon_type_label}}</label>
        <select id="map_map_icon_edit_popup_map_icon_type_id_{{id}}" class="selectpicker popup_select"
            data-live-search="true" data-width="300px">
            {{#select map_icon_type_id}}
                <option value="-1">{{select_map_icon_type_label}}</option>
                {{#mapicontypes}}
                    <option data-content="{{html}}" value="{{id}}">{{name}}</option>
                {{/mapicontypes}}
            {{/select}}
        </select>
    </div>
    {{#if is_map_admin}}
    <div class="form-group">
        <label for="map_map_icon_edit_popup_seasonal_index_{{id}}">{{map_icon_popup_seasonal_index_label}}</label>
        <input type="text" class="form-control"
               id="map_map_icon_edit_popup_seasonal_index_{{id}}" name="map_map_icon_edit_popup_seasonal_index_{{id}}"/>
    </div>
    {{/if}}
    <div class="form-group">
        <label for="map_map_icon_edit_popup_permanent_tooltip_{{id}}">{{map_icon_permanent_tooltip_label}}</label>
        <input type="checkbox" class="form-control left_checkbox" value="{{permanent_tooltip}}"
               id="map_map_icon_edit_popup_permanent_tooltip_{{id}}"
               name="map_map_icon_edit_popup_permanent_tooltip_{{id}}"/>
    </div>
    <button id="map_map_icon_edit_popup_submit_{{id}}" class="btn btn-info" type="button">{{submit_label}}</button>
</div>