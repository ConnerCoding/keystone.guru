<div id="map_map_icon_edit_popup_inner" class="popupCustom">
    <div class="form-group">
        <label for="map_map_icon_edit_popup_comment_{{id}}">{{map_icon_comment_label}}</label>
        <textarea class="form-control" cols="50" rows="5" name="map_map_icon_edit_popup_comment_{{id}}"
                  id="map_map_icon_edit_popup_comment_{{id}}"></textarea>
    </div>
    <div class="form-group">
        <label for="map_map_icon_edit_popup_map_icon_type_id_{{id}}">{{map_icon_type_label}}</label>
        <select id="map_map_icon_edit_popup_map_icon_type_id_{{id}}" class="form-control selectpicker">
            <option value=""></option>
            {{#select map_icon_type_id}}
                <option value="-1">{{select_map_icon_type_label}}</option>
                {{#mapicontypes}}
                    <option data-content="{{html}}" value="{{id}}">{{name}}</option>
                {{/mapicontypes}}
            {{/select}}
        </select>
    </div>
    <button id="map_map_icon_edit_popup_submit_{{id}}" class="btn btn-info" type="button">{{submit_label}}</button>
</div>