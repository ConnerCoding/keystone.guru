<div class="row no-gutters w-100 {{text-class}}">
    <div class="col">
        <div class="input-group">
            <div class="input-group-prepend" style="width: 24px;">
                {{#if awakened}}
                    <img class="mt-1" src="/images/enemymodifiers/awakened.png" title="Awakened" data-toggle="tooltip" style="width: 16px; height: 16px; border-radius: 18px" />
                {{else if boss}}
                    <img class="mt-1" src="/images/mapicon/raid_marker_skull.png" title="Boss" data-toggle="tooltip" style="width: 16px; height: 16px;" />
                {{else if dangerous}}
                    <i class="fa fa-exclamation-triangle text-warning" title="Dangerous" data-toggle="tooltip" style="line-height: 1.6"></i>
                {{/if}}
            </div>
            <div class="input-group-prepend" style="width: 24px;">
                {{enemy_forces}}
            </div>
            <div style="max-width: 200px;">
                {{name}}
                {{#ifCond count '>' 1}}
                    x{{count}}
                {{/ifCond}}
            </div>
        </div>
    </div>
</div>